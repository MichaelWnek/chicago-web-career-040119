<%= form_for @building do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <br>
  <%= f.label :year %>
  <%= f.number_field :year %>

  <br>
  <%= f.collection_select :architect_id, @architects, :id, :name %>
  <%= f.submit %>
<% end %>
