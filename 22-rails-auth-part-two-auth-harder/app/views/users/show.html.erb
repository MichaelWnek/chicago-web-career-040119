<h1>User Profile Page for <%= @user.username %></h1>

<% if logged_in? %>
  <p>(currently logged in as <%= current_user.username %>)</p>
<% else %>
  <p>please <%= link_to 'log in', login_path %> to do more stuff with your own profile!</p>
<% end %>

<% if flash[:message] %>
  <h3><%= flash[:message] %></h3>
<% end %>

<% if @user.id == current_user.id %>
  <%= button_to 'Edit My Profile', edit_user_path(current_user) %>
<% end %>

<%= button_to 'Log Out', '/logout', method: 'delete' %>
